<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>binary</id>
	<formats>
		<format>dir</format>
		<!-- <format>zip</format> -->
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<!-- Files in assembly/include will be copied to root folder of the archive -->
	<fileSets>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>assembly/include</directory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
	</fileSets>
	
	<moduleSets>
		<moduleSet>

			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>at.sti2.sparkwave:spark-wave</include>
				<include>at.sti2.sparkwave:spark-streamer</include>
			</includes>

			<binaries>
				<outputDirectory>bin/</outputDirectory>
				<unpack>false</unpack>
				<outputFileNameMapping> ${module.artifactId}.${module.extension}</outputFileNameMapping>

				<!-- Exclude packages with other classifiers, e.g. sources, test-sources -->
				<dependencySets>
					<dependencySet>
						<excludes>
							<exclude>*:*</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>

		</moduleSet>
	</moduleSets>
</assembly>